#include <iostream>
using namespace std;
void main() {
	setlocale(0, "");

	cout << "Выберите время года цифрой\n\n";

	cout << "[1] Лето\n";
	cout << "[2] Осень\n";
	cout << "[3] Зима\n";
	cout << "[4] Весна\n";

	int a1;

	cin >> a1;
	
	if (a1 == 1) {
		cout << "Сейчас лето, иди купаться на море";
	}
	else if (a1 == 2) {
		cout << "Сейчас осень , возьми зонт";
	}
	else if (a1 == 3) {
		cout << "Сейчас зима, одень шапку";
	}
	else if (a1 == 4) {
		cout << "Сейчас весна, пускай кораблики по речке";
	}
	else {
		cout << "Такого времени года нет";
	}
}
